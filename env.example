# Yorick Funeral Notices - Example Environment Variables

# Rails environment
RAILS_ENV=development

# Rails secret key base (required for production)
SECRET_KEY_BASE=your_secret_key_base_here

# Database connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/myapp_development
# For production (Docker Compose):
# DATABASE_URL=postgres://postgres:postgres@db:5432/myapp_production

# PostgreSQL service variables
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=myapp_development
# For production (Docker Compose):
# POSTGRES_DB=myapp_production

# Timezone for database and services
TZ=America/Argentina/Buenos_Aires

# Elasticsearch endpoint
ELASTICSEARCH_URL=http://localhost:9200
# For production (Docker Compose):
# ELASTICSEARCH_URL=http://elasticsearch:9200

# Chewy/Elasticsearch indexer settings (optional)
# CHEWY_HOST=elasticsearch:9200
# CHEWY_PREFIX=yorick_production

# Serve static files (uncomment if not using a reverse proxy)
# RAILS_SERVE_STATIC_FILES=true

# Assume SSL is terminated by a proxy (set to true if using a reverse proxy with SSL termination)
ASSUME_SSL=false

# Force SSL in Rails (set to false to disable SSL enforcement, true or unset to enforce)
FORCE_SSL=false 